<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  背景  -->
    <item android:id="@android:id/background" android:height="5dp" android:gravity="center">
        <shape>
            <corners android:radius="2dip" />
            <solid android:color="@color/lightGray"/>
        </shape>
    </item>
    <!--  第二进度条  -->
    <item android:id="@android:id/secondaryProgress" android:height="5dp" android:gravity="center">
        <clip>
            <shape>
                <corners android:radius="2dip" />
                <solid android:color="@color/colorPrimary"/>
            </shape>
        </clip>
    </item>
    <!--  第一进度条  -->
    <item android:id="@android:id/progress" android:height="5dp" android:gravity="center">
        <clip>
            <shape>
                <corners android:radius="2dip" />
                <solid android:color="@color/colorPrimary"/>
            </shape>
        </clip>
    </item>

</layer-list>