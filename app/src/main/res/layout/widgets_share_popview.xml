<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteSmoke"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_title_popview"
        android:layout_marginTop="0.5dp"
        android:text="分享"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:padding="15dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_0_popview"
        android:layout_marginTop="0.5dp"
        android:text="保存到相册"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:padding="15dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_1_popview"
        android:layout_marginTop="0.5dp"
        android:text="分享到微信朋友圈"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:padding="15dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_2_popview"
        android:layout_marginTop="0.5dp"
        android:text="发送给微信好友"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:padding="15dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_3_popview"
        android:layout_marginTop="0.5dp"
        android:text="发送给QQ好友"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:padding="15dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_4_popview"
        android:layout_marginTop="0.5dp"
        android:text="分享到QQ空间"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:padding="15dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_cannel"
        android:layout_marginTop="10dp"
        android:text="取消"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:padding="15dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>