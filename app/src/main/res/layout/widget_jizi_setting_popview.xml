<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="4dp"
    app:bl_pressed_solid_color="@color/whiteSmoke"
    app:bl_unPressed_solid_color="@color/whiteSmoke">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@drawable/shape_list_divider"
        android:dividerHeight="0.6dp"
        android:listSelector="@android:color/transparent" />

</com.noober.background.view.BLLinearLayout>