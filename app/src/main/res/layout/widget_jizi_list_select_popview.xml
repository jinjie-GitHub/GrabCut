<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    app:bl_pressed_solid_color="@android:color/white"
    app:bl_unPressed_solid_color="@android:color/white">

    <View
        android:background="@color/colorLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp">

        <View
            android:background="@color/colorLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_weight="1"
            android:padding="2dp"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RadioGroup
                android:padding="2dp"
                android:background="@color/whiteSmoke"
                android:id="@+id/rg_kid"
                android:orientation="horizontal"
                android:layout_width="80dp"
                android:layout_height="match_parent">
                <RadioButton
                    android:checked="true"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:text="毛笔"
                    android:id="@+id/rb_kid_1"
                    android:gravity="center"
                    android:button="@null"
                    android:layout_marginLeft="1dp"
                    android:background="@drawable/tab_checkbox_bg3"
                    android:textColor="@drawable/check_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:text="硬笔"
                    android:id="@+id/rb_kid_2"
                    android:gravity="center"
                    android:button="@null"
                    android:layout_marginLeft="1dp"
                    android:background="@drawable/tab_checkbox_bg3"
                    android:textColor="@drawable/check_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </RadioGroup>

            <RadioGroup
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight="1"
                android:id="@+id/rg_type"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="26dp">

                <RadioButton
                    android:checked="true"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:text="真迹"
                    android:id="@+id/rb_type_1"
                    android:gravity="center"
                    android:button="@null"
                    android:layout_marginLeft="1dp"
                    android:background="@drawable/tab_checkbox_bg2"
                    android:textColor="@drawable/tab_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:text="字典"
                    android:id="@+id/rb_type_2"
                    android:gravity="center"
                    android:button="@null"
                    android:layout_marginLeft="1dp"
                    android:background="@drawable/tab_checkbox_bg2"
                    android:textColor="@drawable/tab_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <RadioButton
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:text="字库"
                    android:id="@+id/rb_type_3"
                    android:gravity="center"
                    android:button="@null"
                    android:layout_marginLeft="1dp"
                    android:background="@drawable/tab_checkbox_bg2"
                    android:textColor="@drawable/tab_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                </RadioGroup>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="70dp"
                android:layout_height="match_parent">

            <TextView
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/silver"
                android:text="最近使用 "
                android:drawableTint="@color/silver"
                android:drawableRight="@mipmap/arrow_down_small"
                android:id="@+id/tv_lately"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/colorLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <View
        android:background="@color/colorLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="32dp">

        <View
            android:background="@color/colorLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_margin="4dp"
            android:background="@drawable/shape_solid_whitesmoke"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="全部"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <ImageView
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:tint="@color/gray"
                android:src="@mipmap/arrow_down_small"
                android:id="@+id/iv_author_clean"
                android:layout_width="22dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!--<com.noober.background.view.BLLinearLayout
            android:layout_margin="2dp"
            android:padding="1dp"
            app:bl_pressed_solid_color="@android:color/white"
            app:bl_unPressed_solid_color="@android:color/white"
            app:bl_stroke_color="@color/colorLine"
            app:bl_stroke_width="1dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <TextView
                android:background="@color/white"
                android:gravity="center"
                android:text="书法家"
                android:drawableTint="@color/colorPrimary"
                android:drawableRight="@mipmap/arrow_down_small"
                android:drawablePadding="5dp"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </com.noober.background.view.BLLinearLayout>-->

        <RadioGroup
            android:layout_weight="1"
            android:padding="2dp"
            android:gravity="center"
            android:id="@+id/rg_font"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="30dp">

            <RadioButton
                android:checked="true"
                android:textSize="14sp"
                android:layout_weight="1"
                android:text="楷"
                android:id="@+id/rb_1"
                android:gravity="center"
                android:button="@null"
                android:layout_marginLeft="1dp"
                android:background="@drawable/tab_checkbox_bg"
                android:textColor="@drawable/tab_text_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <View
                android:background="@color/colorLine"
                android:layout_width="1dp"
                android:layout_height="12dp"/>
            <RadioButton
                android:textSize="14sp"
                android:layout_weight="1"
                android:text="行"
                android:id="@+id/rb_2"
                android:gravity="center"
                android:button="@null"
                android:layout_marginLeft="1dp"
                android:background="@drawable/tab_checkbox_bg"
                android:textColor="@drawable/tab_text_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <View
                android:background="@color/colorLine"
                android:layout_width="1dp"
                android:layout_height="12dp"/>
            <RadioButton
                android:textSize="14sp"
                android:layout_weight="1"
                android:text="草"
                android:id="@+id/rb_3"
                android:gravity="center"
                android:button="@null"
                android:layout_marginLeft="1dp"
                android:background="@drawable/tab_checkbox_bg"
                android:textColor="@drawable/tab_text_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <View
                android:background="@color/colorLine"
                android:layout_width="1dp"
                android:layout_height="12dp"/>
            <RadioButton
                android:textSize="14sp"
                android:layout_weight="1"
                android:text="隶"
                android:id="@+id/rb_4"
                android:gravity="center"
                android:button="@null"
                android:layout_marginLeft="1dp"
                android:background="@drawable/tab_checkbox_bg"
                android:textColor="@drawable/tab_text_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <View
                android:background="@color/colorLine"
                android:layout_width="1dp"
                android:layout_height="12dp"/>
            <RadioButton
                android:textSize="14sp"
                android:layout_weight="1"
                android:text="篆"
                android:id="@+id/rb_5"
                android:gravity="center"
                android:button="@null"
                android:layout_marginLeft="1dp"
                android:background="@drawable/tab_checkbox_bg"
                android:textColor="@drawable/tab_text_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RadioGroup>

        <View
            android:background="@color/colorLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <View
        android:background="@color/colorLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <!--排序-->
    <LinearLayout
        android:animateLayoutChanges="true"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="32dp">
        <View
            android:background="@color/colorLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <RadioGroup
            android:background="@color/whiteSmoke"
            android:gravity="center"
            android:id="@+id/rg_orderby_author"
            android:orientation="horizontal"
            android:layout_width="81dp"
            android:layout_height="match_parent">

            <RadioButton
                android:textStyle="bold"
                android:id="@+id/rb_orderby_author_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:button="@null"
                android:checked="true"
                android:drawableRight="@mipmap/order_small"
                android:drawableTint="@drawable/tab_checkbox_sort_bg"
                android:drawablePadding="2dp"
                android:includeFontPadding="false"
                android:gravity="center"
                android:text="作者"
                android:textColor="@drawable/tab_sort_text_color"
                android:textSize="10sp" />

            <View
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:textSize="10sp"
                android:text="数量"
                android:id="@+id/rb_orderby_author_2"
                android:gravity="center"
                android:button="@null"
                android:layout_marginLeft="1dp"
                android:drawableTint="@drawable/tab_checkbox_sort_bg"
                android:drawablePadding="2dp"
                android:includeFontPadding="false"
                android:drawableRight="@mipmap/order_small"
                android:textColor="@drawable/tab_sort_text_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </RadioGroup>
        <View
            android:background="@color/colorLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:background="@color/whiteSmoke"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/iv_author"
            android:src="@mipmap/list_hide"
            app:tint="#8A8A8A"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <View
            android:background="@color/colorLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <RadioGroup
            android:background="@color/whiteSmoke"
            android:gravity="center"
            android:id="@+id/rg_orderby"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RadioButton
                android:textStyle="bold"
                android:checked="true"
                android:textSize="12sp"
                android:text="热度"
                android:id="@+id/rb_orderby_1"
                android:gravity="center"
                android:button="@null"
                android:layout_marginLeft="1dp"
                android:drawableTint="@drawable/tab_checkbox_sort_bg"
                android:drawablePadding="2dp"
                android:includeFontPadding="false"
                android:drawableRight="@mipmap/order_large"
                android:textColor="@drawable/tab_sort_text_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <RadioButton
                android:textSize="12sp"
                android:text="作者"
                android:id="@+id/rb_orderby_2"
                android:gravity="center"
                android:button="@null"
                android:layout_marginLeft="15dp"
                android:drawableTint="@drawable/tab_checkbox_sort_bg"
                android:drawablePadding="2dp"
                android:includeFontPadding="false"
                android:drawableRight="@mipmap/order_large"
                android:textColor="@drawable/tab_sort_text_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <RadioButton
                android:textSize="12sp"
                android:text="作品"
                android:id="@+id/rb_orderby_3"
                android:gravity="center"
                android:button="@null"
                android:layout_marginLeft="15dp"
                android:drawableTint="@drawable/tab_checkbox_sort_bg"
                android:drawablePadding="2dp"
                android:includeFontPadding="false"
                android:drawableRight="@mipmap/order_large"
                android:textColor="@drawable/tab_sort_text_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RadioGroup>

        <ImageView
            android:background="@color/whiteSmoke"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/iv_change"
            android:src="@mipmap/item_large"
            app:tint="#8A8A8A"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <View
            android:background="@color/colorLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <View
        android:background="@color/colorLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <!--列表-->
    <!--数据-->
    <LinearLayout
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:background="@color/colorLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:background="@color/whiteSmoke"
            android:id="@+id/rv_author"
            android:layout_width="81dp"
            android:layout_height="match_parent"
            android:overScrollMode="never" />

        <View
            android:background="@color/colorLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>


        <com.ltzk.mbsf.widget.MySmartRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whiteSmoke">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlAccentColor="@color/silver"
                app:srlClassicsSpinnerStyle="Translate"
                app:srlDrawableArrow="@mipmap/refresh_arrow_header"
                app:srlDrawableArrowSize="36dp"
                app:srlDrawableProgressSize="18dp"
                app:srlFinishDuration="0"
                app:srlTextSizeTime="13sp"
                app:srlTextSizeTitle="14sp" />

            <com.ltzk.mbsf.widget.MultipleStatusView
                android:id="@+id/status_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:emptyView="@layout/empty_data"
                app:errorView="@layout/empty_error"
                app:loadingView="@layout/loading_view">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never" />
            </com.ltzk.mbsf.widget.MultipleStatusView>

            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlAccentColor="@color/silver"
                app:srlDrawableArrow="@mipmap/refresh_arrow_header"
                app:srlDrawableArrowSize="36dp"
                app:srlTextSizeTitle="14sp" />
        </com.ltzk.mbsf.widget.MySmartRefreshLayout>

        <View
            android:background="@color/colorLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
    </LinearLayout>


</com.noober.background.view.BLLinearLayout>