<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteSmoke"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.ltzk.mbsf.widget.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:drawableLeft="@mipmap/ic_vip_gift"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:text="输入兑换码可兑换对应奖励"
        android:textColor="@color/gray"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="30dp"
        android:background="@drawable/shape_solid_white"
        android:gravity="center_vertical"
        android:hint="请输入兑换码"
        android:imeOptions="actionSearch"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/silver"
        android:textCursorDrawable="@drawable/shape_cursor_blue"
        android:textSize="15sp" />

    <Button
        android:id="@+id/redemption"
        android:layout_width="260dp"
        android:layout_height="42dp"
        android:layout_margin="30dp"
        android:background="@drawable/selector_shape_gray_blue"
        android:text="兑换"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>