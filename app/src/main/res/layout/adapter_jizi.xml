<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/tl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="5dp">

            <TableRow android:layout_weight="1">
                <com.ltzk.mbsf.widget.MyLoadingImageView
                    android:id="@+id/iv_thumb_url6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparentWhiteSmoke" />

                <com.ltzk.mbsf.widget.MyLoadingImageView
                    android:id="@+id/iv_thumb_url3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@color/transparentWhiteSmoke" />

                <com.ltzk.mbsf.widget.MyLoadingImageView
                    android:id="@+id/iv_thumb_url0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@color/transparentWhiteSmoke" />
            </TableRow>

            <TableRow
                android:layout_marginTop="1dp"
                android:layout_weight="1">

                <com.ltzk.mbsf.widget.MyLoadingImageView
                    android:id="@+id/iv_thumb_url7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparentWhiteSmoke" />

                <com.ltzk.mbsf.widget.MyLoadingImageView
                    android:id="@+id/iv_thumb_url4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@color/transparentWhiteSmoke" />

                <com.ltzk.mbsf.widget.MyLoadingImageView
                    android:id="@+id/iv_thumb_url1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@color/transparentWhiteSmoke" />
            </TableRow>

            <TableRow
                android:layout_marginTop="1dp"
                android:layout_weight="1">

                <com.ltzk.mbsf.widget.MyLoadingImageView
                    android:id="@+id/iv_thumb_url8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparentWhiteSmoke" />

                <com.ltzk.mbsf.widget.MyLoadingImageView
                    android:id="@+id/iv_thumb_url5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@color/transparentWhiteSmoke" />

                <com.ltzk.mbsf.widget.MyLoadingImageView
                    android:id="@+id/iv_thumb_url2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@color/transparentWhiteSmoke" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightCyan"
            android:gravity="center">

            <ImageView
                android:id="@+id/cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@mipmap/check_1"
                app:tint="@android:color/white" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="0.6dp"
        android:background="@android:color/white"
        android:ellipsize="end"
        android:gravity="center"
        android:lineSpacingMultiplier="0.9"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="11sp" />
</LinearLayout>